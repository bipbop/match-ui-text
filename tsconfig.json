{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist/",
    "target": "es5",
    "lib": ["ES2015", "DOM"],
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
